                                                                                @{
                                                                                    var dateFin = (new DateTime(1970, 1, 1)).AddMilliseconds(lancerPreinscription.dateFin.Value);
                                                                                }
                                                                                <td>@dateFin</td>
                                                                                @{
                                                                                    var datePrologement = (lancerPreinscription.dateDebut.Value != 0) ? (new DateTime(1970, 1, 1)).AddMilliseconds(lancerPreinscription.dateDebut.Value) : dateFin;
                                                                                }
