        document.getElementById('idProlonger').value = idProlonger
        var listePreinscriptions =@Html.Raw(Json.Encode(Model.lstLancerPreinscriptions));
        var preinscription = listePreinscriptions.filter(p => p.id == idProlonger)[0];

        // DATE DEBUT
        var day = ("0" + new Date(preinscription.datePrologement).getDate()).slice(-2);
        var month = ("0" + (new Date(preinscription.datePrologement).getMonth() + 1)).slice(-2);
        var dateDebut = new Date(preinscription.datePrologement).getFullYear() + "-" + (month) + "-" + (day);


        $('#dateProlonger').val(dateDebut)

        document.getElementById('mediumModalProlongerPreinscription').style.display = 'block'
    }


    function dateProlonger()
    {

        var listePreinscriptions =@Html.Raw(Json.Encode(Model.lstLancerPreinscriptions));
        var preinscription = listePreinscriptions.filter(p => p.id == document.getElementById('idProlonger').value)[0];


            document.getElementById("messageProlonger").innerText = null
            document.getElementById("smsProlonger").innerText = null
            $.post('@Url.Action("ajouterLancerPreinscription")',
            {
                anneeScolaireID: preinscription.anneeScolaireID,
                classeID: preinscription.classeID,
                dateDebut: preinscription.dateDebut,
                dateFin: preinscription.dateFin,
                datePrologement: new Date($('#dateProlonger').val()).getTime(),
                departementID: preinscription.departementID,
                filiereID: preinscription.filiereID,
                id:preinscription.id


            },
            function (rep)
            {
                if (rep.code == 200)
                {
                    document.getElementById("messageProlonger").innerText = rep.message;
                    document.getElementById("smsProlonger").innerText = null
                    setTimeout(() => { document.getElementById('mediumModalAdd').style.display = 'none'; window.location.reload() }, 1000);
                }
                else
                {
                    document.getElementById("smsProlonger").innerText = rep.message ;
                    document.getElementById("messageProlonger").innerText = null

                }



            }).fail(function (xhr, status, error) {
                document.getElementById("smsProlonger").innerText = " une erreur interne est survenue";
                document.getElementById("messageProlonger").innerText = null

            });



    }
</script>