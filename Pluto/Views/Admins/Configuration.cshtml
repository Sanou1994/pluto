                                                                                <td>@Model.lstAnneeScolaires.Where(o => o.id == lancerPreinscription.anneeScolaireID).Select(p => p.libelle).FirstOrDefault()  </td>
                                                                                <td>@Model.lstFilieres.Where(o => o.id == lancerPreinscription.filiereID).Select(p => p.titre).FirstOrDefault()</td>
                                                                                <td>@Model.lstClasses.Where(o => o.id == lancerPreinscription.classeID).Select(p => p.nom).FirstOrDefault()</td>
