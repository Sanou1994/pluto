@model PagedList.IPagedList<Poste>
@{
    ViewBag.Title = "Poste";
    Layout = "~/Views/Shared/AdminsLayout.cshtml";
}
@using Pluto.Models;
@using PagedList.Mvc;
<div class="midde_cont">
    <div class="container-fluid">
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>
                        <a href="~/Admins/Index">Accueil</a>
                        <span>
                            <i class="fa fa-angle-right"></i>
                        </span>
                        Paramètres
                        <span>
                            <i class="fa fa-angle-right"></i>
                        </span>
                        Poste
                    </h2>
                </div>
            </div>
        </div>
        <div class="row column4 graph">
            <div class="col-md-12">
                <div class="dash_blog">
                    <div class="dash_blog_inner">
                        <div class="dash_head" style="text-align:center;">
                            <h3 style="font-weight:bold;"><span><i class="fa fa-address-card"></i> POSTE</span></h3>
                        </div><br />
                        <p class="text-capitalize  text-center" style="color: red">
                            @ViewBag.sms
                        </p>
                        <div class="col-md-12">
                            <div class="white_shd full margin_bottom_30">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="inbox-head">
                                            <div class="col-md-6">
                                                <div class="button_block"><button type="button" class="btn cur-p btn-outline-success" data-toggle="modal" data-target="#mediumModalCreate">Cliquer ici pour ajouter un poste</button></div>
                                            </div>
                                            <div class="col-md-6">
                                                @using (Html.BeginForm("Poste", "Admins", FormMethod.Get))
                                                {
                                                    <div class="row">
                                                        <input type="text" class="form-control" value="@ViewBag.CurrentFilter" style="width:60%" name="searching" placeholder="Rechercher...">
                                                        <button class="btn sr-btn" type="submit"><i class="fa fa-search"></i></button>
                                                    </div>
                                                }
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <center>
                                    <p id="messagePosteB" style="color: green"></p>
                                    <p id="smsPosteB" style="color:red"></p>
                                </center>
                                <div class="table_section padding_infor_info">
                                    <div class="table-responsive-sm">
                                        <a type="button" href="@Url.Action("Poste","Admins")" class="btn cur-p btn-outline-success" style="float:right">Cliquer ici pour initialiser la liste</a>

                                        @if (@Model == null || @Model.Count() == 0)
                                        {
                                            <h3 class="text-center">Aucun poste disponible</h3>
                                        }
                                        else
                                        {
                                            <table class="table table-bordered" style="border:1px solid #15283c;">
                                                <thead style="background: #15283c;">
                                                    <tr style="text-align:center; color:#fff; font-weight:bold;">
                                                        <th>N°</th>
                                                        <th>Intitulé</th>
                                                        <th>Etat</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var poste in Model)
                                                    {

                                                        <tr style="text-align:center; color:#000000;">
                                                            <td>@poste.id</td>
                                                            <td>@poste.nom</td>
                                                            @if (poste.status)
                                                            {
                                                                <td style="color:green"> Active</td>

                                                            }
                                                            else
                                                            {
                                                                <td style="color:red">Desactive</td>

                                                            }
                                                            

                                                            <td>                                                                
                                                                <button class="btn-dark btn-sm" id="modifier" data-toggle="modal" onclick="  ouvrirPosteModal(@poste.id)" data-target="#mediumModalModify" data-placement="top" title="Modifier"><i class="fa fa-edit"></i></button>
                                                                <button class="btn-danger btn-sm" onclick="ouvrirBloquerModal(@poste.id)" id="supprimer" title="Supprimer"><i class="fa fa-trash"></i></button>
                                                            </td>
                                                        </tr>
                                                    }

                                                </tbody>
                                            </table>


                                        }

                                    </div>
                                    <center>
                                        <div class="pagination" style="width:200px;margin-right:2.5%;margin-left:2.5%">
                                            @Html.PagedListPager(Model, page => Url.Action("Poste", new { page, searching = ViewBag.CurrentFilter }) + "#Product", new PagedListRenderOptions { MaximumPageNumbersToDisplay = 4, ContainerDivClasses = new List<string> { "MenuTab", "MenuTab" }, LiElementClasses = new List<string> { "pagination-bar", "pagination-bar" }, DelimiterBetweenPageNumbers = "-" })
                                        </div>
                                    </center>
                                </div>

                                <div class="modal fade" id="mediumModalCreate" tabindex="-1" role="dialog" aria-labelledby="mediumModalLabelCreate" aria-hidden="true">
                                    <div class="modal-dialog modal-lg" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="mediumModalLabelCreate">Ajouter un poste</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true" style="color:red;">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <center>
                                                            <p id="messadeAjouterPoste" style="color: green"></p>
                                                            <p id="smsAjouterPoste" style="color:red"></p>
                                                        </center>
                                                        <div class="row">

                                                            <div class="col-md-6">
                                                                <div class="form-group">
                                                                    <label for="nom" class="control-label mb-1">Nom </label>
                                                                    <input id="nom" name="nom" type="text" class="form-control">
                                                                </div>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-primary" onclick="ajouterPoste()"><span id="spinner" class="spinner-border text-light" role="status" hidden></span>Enregistrer</button>
                                                <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="document.getElementById('mediumModalCreate').style.display = 'none';window.location.reload()">Annuler</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <input id="posteID" name="posteID" type="text" class="form-control" hidden>

                                <!-- END CREER PERSONNEL POPUP-->
                                <!-- MODIFIER PERSONNEL POPUP-->
                                <div id="mediumModalModify" class="modal container-fluid ">

                                    <div class="modal-dialog modal-lg" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="mediumModalLabelModify">Modifier un poste</h5>

                                            </div>
                                            <div class="modal-body">
                                                <div class="row">
                                                    <div class="col-md-12">

                                                        <center>
                                                            <p id="messadeAjouterPosteM" style="color: green"></p>
                                                            <p id="smsAjouterPosteM" style="color:red"></p>
                                                        </center>

                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <div class="form-group">
                                                                    <label for="nom" class="control-label mb-1">Nom </label>
                                                                    <input id="nomM" name="nomM" type="text" class="form-control">
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-primary" onclick="modifierPoste()"><span id="spinnerM" class="spinner-border text-light" role="status" hidden></span>Enregistrer</button>
                                                <button type="button" class="btn btn-danger" onclick="document.getElementById('mediumModalModify').style.display = 'none';window.location.reload()">Annuler</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- END MODIFIER PERSONNEL POPUP-->
                                <!-- BLOQUER PERSONNEL POPUP-->
                                <div id="mediumModalBloquer" class="modal container-fluid ">

                                    <div class="modal-dialog modal-lg" role="document">
                                        <div class="modal-content align-content-center">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="mediumModalLabelBloquer">Bloquer un poste</h5>

                                            </div>
                                            <div class="modal-body align-content-center">
                                                <center>
                                                    <h5 class="text-center">Voulez-vous bloquer ce poste ?</h5>
                                                </center>


                                                <div class="container">
                                                    <div class="row">
                                                        <button type="button" class="btn btn-primary" onclick="bloquerPoste()"><span id="spinnerB" class="spinner-border text-light" role="status" hidden></span>Oui</button>
                                                        <button type="button" style="float:right" class="btn btn-danger" onclick="document.getElementById('mediumModalBloquer').style.display = 'none';window.location.reload()">Non</button>
                                                    </div>


                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- END MODIFIER PERSONNEL POPUP-->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end dashboard inner -->
</div>
<style>
    #modifier, #details, #supprimer {
        border-radius: 100px;
    }

    #legend {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 0px;
        width: 35%;
        border: 2px double #15283c;
        border-radius: 8px;
        padding: 5px 5px 5px 10px;
        color: #15283c;
        background-color: #fff;
        text-align: center;
    }

    #fieldset {
        border: 1px solid #15283c !important;
        margin: 0;
        min-width: 0;
        padding: 10px;
        position: relative;
        border-radius: 8px;
        background-color: #fff;
        padding-left: 10px !important;
    }

    #nav-admission-tab, #nav-dossiers-tab, #nav-preinscription-tab, #nav-inscription-tab {
        border-radius: 100px;
    }

    .horizontal-line {
        border-bottom: 1px dashed #ff5722;
        display: inline-block;
        width: 65%;
    }

    #title_infos_activite {
        color: #ff5722;
        font-size: 16px;
    }
</style>

<script>

    function ajouterPoste()
    {
        document.getElementById("spinner").hidden = false
        document.getElementById("messadeAjouterPoste").innerText = null
        document.getElementById("smsAjouterPoste").innerText = null
         $.post('@Url.Action("ajouterPoste")',
            {
                 nom: document.getElementById('nom').value

            },
            function (rep)
            {
                if (rep.code == 200)
                {
                    document.getElementById("spinner").hidden = true
                    document.getElementById("messadeAjouterPoste").innerText = rep.message;
                    document.getElementById("smsAjouterPoste").innerText = null
                    setTimeout(() => { document.getElementById('mediumModalCreate').style.display = 'none'; window.location.reload() }, 1000);
                }
                else
                {
                    document.getElementById("spinner").hidden = true
                    document.getElementById("smsAjouterPoste").innerText = rep.message ;
                    document.getElementById("messadeAjouterPoste").innerText = null

                }



            }).fail(function (xhr, status, error) {
                document.getElementById("spinner").hidden = true
                document.getElementById("smsAjouterPoste").innerText = " une erreur interne est survenue";
                document.getElementById("messadeAjouterPoste").innerText = null

            });



    }
    function modifierPoste()
    {
        document.getElementById("spinnerM").hidden = false
        document.getElementById("messadeAjouterPosteM").innerText = null
        document.getElementById("smsAjouterPosteM").innerText = null
         $.post('@Url.Action("ajouterPoste")',
            {

                nom: document.getElementById('nomM').value,

                id: document.getElementById('posteID').value

            },
            function (rep)
            {
                if (rep.code == 200)
                {
                    document.getElementById("spinnerM").hidden = true
                    document.getElementById("messadeAjouterPosteM").innerText = rep.message;
                    document.getElementById("smsAjouterPosteM").innerText = null
                    setTimeout(() => { document.getElementById('mediumModalModify').style.display = 'none'; window.location.reload() }, 1000);
                }
                else
                {
                    document.getElementById("spinnerM").hidden = true
                    document.getElementById("smsAjouterPosteM").innerText = rep.message ;
                    document.getElementById("messadeAjouterPosteM").innerText = null

                }



            }).fail(function (xhr, status, error) {
                document.getElementById("spinnerM").hidden = true
                document.getElementById("smsAjouterPosteM").innerText = " une erreur interne est survenue";
                document.getElementById("messadeAjouterPosteM").innerText = null

            });



    }
    function ouvrirPosteModal(posteID)
    {
        document.getElementById("messadeAjouterPosteM").innerText = null
        document.getElementById("smsAjouterPosteM").innerText = null

        var postes = @Html.Raw(Json.Encode(Model));
        var poste = postes.filter(e => e.id == posteID)[0];

        document.getElementById('posteID').value = posteID
            document.getElementById('nomM').value = poste.nom,

            document.getElementById('mediumModalModify').style.display = 'block'




     }
    function ouvrirBloquerModal(posteID)
    {
        document.getElementById('mediumModalBloquer').style.display = 'block'
        document.getElementById('posteID').value = posteID



    }
    function bloquerPoste()
    {
        document.getElementById("messagePosteB").innerText = null
        document.getElementById("smsPosteB").innerText = null

             $.post('@Url.Action("bloquerPoste")',

                {
                    id: document.getElementById('posteID').value
                },
            function (rep)
            {
                if (rep.code == 200)
                {

                    document.getElementById("messagePosteB").innerText = rep.message;
                    document.getElementById("smsPosteB").innerText = null
                    window.location.reload()
                }
                else
                {
                    document.getElementById("smsPosteB").innerText = rep.message;
                    document.getElementById("messagePosteB").innerText = null
                }
            }
            ).fail(function (xhr, status, error)
            {
                                //Ajax request failed.
                document.getElementById("smsPosteB").innerText = " une erreur interne est survenue coté client";
                document.getElementById("messagePosteB").innerText = null

            });
    }


</script>
